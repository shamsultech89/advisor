<%= form_for @mailing, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.hidden_field :from, :value=> current_user.email  %>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
<!--
  <div class="control-group">
    <%= f.label :from, :class => 'control-label' %>
    <div class="controls">
      <span class="input-large uneditable-input"><%= current_user.email %></span>
    </div>
  </div>
-->
  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :photo, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :photo, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mailings_path, :class => 'btn' %>
  </div>
<% end %>
