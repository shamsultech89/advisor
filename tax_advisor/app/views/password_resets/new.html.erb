
<div class="page-header">
  <h2>Reset Password</h2>
</div>

<%= form_tag password_resets_path,:html => { :class => 'form-horizontal' }, :method => :post do %>
  <fieldset>
    <div class="control-group">
      <%= label_tag :email %>
      <div class="controls">
        <%= text_field_tag :email, params[:email], :class => 'text_field', :placeholder =>"Email" %>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag "Reset Password", :class => 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>
