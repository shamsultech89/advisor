<%= form_for @user, :url => password_reset_path(params[:id]),:html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>


    <% if @user.errors.any? %>
      <div class="error_messages" id="error_explanation">
        <!-- <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2> -->
        <h2>Form is invalid</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="control-group">
      <%= f.label :password, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'text_field', :placeholder =>"Password" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'text_field', :placeholder =>"Password Confirmation" %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit "Update Password", :class => 'btn btn-primary' %>
    </div>

  </fieldset>
<% end %>



