<%  content_for :header_image do %>
 <%= image_tag('financial_services.jpg', :style => 'width:100%;margin-top:-10px;height:200px;') %>
 <% end %>
<div class="page-header">
  <h3>LOGIN</h3>
</div>


<%= form_tag sessions_path , :html => { :class => 'form-horizontal' } do %>
  <fieldset>
    
    <div class="control-group">
      <%= label_tag :email %>
      <div class="controls">
        <%= text_field_tag :email, params[:email], :class => 'text_field', :placeholder =>"Email" %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :password %>
      <div class="controls">
        <%= password_field_tag :password,params[:password], :class => 'text_field', :placeholder =>"Password" %>
      </div>
    </div>

    <!--
      <p>
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>
      </p> -->

    <div class="form-actions">
      <%= submit_tag "Login", :class => 'btn btn-primary' %>
      <%= link_to "forgotten password?",
        new_password_reset_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

